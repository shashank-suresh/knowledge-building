# %%
fig, ax = plt.subplots(
    figsize=(10, 8)
)  # can specify nrows, ncols, figsize for multiple subplots on the same figure
x = np.random.standard_normal(100)
y = np.random.standard_normal(100)
# ax.plot(x, y, "o") # "o" makes it a scatterplot
ax.scatter(x, y)
# set_xlabel(), set_ylabel(), set_title() - le basics of ax

# %%
fig, ax = plt.subplots(figsize=(10, 8))

x = np.linspace(
    -np.pi, np.pi, 50
)  # returns a vector of n numbers starting at a and ending at b
y = x
f = np.multiply.outer(
    np.cos(y), 1 / (1 + x**2)
)  # Calculates all possible pairwise products into a matrix of rank 1
ax.contour(x, y, f, levels=45)  # levels increases the resolution

# ax.contour(x, y, f) # first dim, second dim, matrix for third dim for each pair of (first, second)

# %%
fig, ax = plt.subplots(figsize=(10, 8))
ax.imshow(
    f
)  # Color-coded plot whose colors depend on the third dimension being calculated (heatmap)

