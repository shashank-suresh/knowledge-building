# %%
import matplotlib.pyplot as plt
import numpy as np
import pandas as pd

# %%
rng = np.random.default_rng(
    1303
)  # Sets a random seed to yield same results across different runs

# %%
x = rng.normal(size=1000)  # loc = mean, scale = std, size = number of observations
y = x + rng.normal(loc=50, scale=1, size=1000)

np.corrcoef(x, y)  # computes correlation matrix b/w x and y

# %%
np.var(y), y.var(), np.mean((y - y.mean()) ** 2)

# Note: np.var() divides by the sample size n rather than n-1
# %%
np.mean(y), np.std(y), np.var(y)
